@model IEnumerable<MyBlog.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@if (Model.Any())
{
    foreach (var post in Model)
    {
        <div class="post">
            <div class="title">
                <h3>@post.Title</h3>
                <span>By: @post.Author.Name on @post.DateCreate.ToShortDateString()</span>
                <div class="body">
                    @if (!string.IsNullOrEmpty(post.ImageURL))
                    {
                        <img src="@post.ImageURL" />
                    }
                    @post.Body
                    <div class="likes">
                        @post.Likes likes
                        <div class="comments">
                            @foreach (var comment in post.Comments)
                            
	{
                                <div class="comment">
                                    <span class="commentTitle">
                                        By: @comment.Name on @comment.DateCreate
                                    </span>
                                    <div>@comment.Body</div>
                                </div>
		 
	}

                           
                        </div>

                    </div>

                </div>
            </div>
        </div>
    }

}
else
{
    <div>No Posts Yet!</div> 

}